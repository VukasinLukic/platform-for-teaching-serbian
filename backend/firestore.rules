rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    // Courses collection - everyone can read active courses
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Modules collection - everyone can read (for course info)
    match /modules/{moduleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Lessons collection - everyone can read (for course info and lesson count)
    match /lessons/{lessonId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Transactions collection
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() &&
                     (resource.data.user_id == request.auth.uid ||
                      resource.data.userId == request.auth.uid ||
                      isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                       (resource.data.user_id == request.auth.uid ||
                        resource.data.userId == request.auth.uid) ||
                       isAdmin();
      allow delete: if isAdmin();
    }

    // User courses collection
    match /user_courses/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin();
    }

    // Files collection
    match /files/{fileId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Progress tracking
    match /progress/{progressId} {
      allow read: if isAuthenticated() &&
                     progressId.matches(request.auth.uid + '_.*');
      allow write: if isAuthenticated() &&
                      progressId.matches(request.auth.uid + '_.*');
    }

    // Online packages - read for all, write for admin only
    match /online_packages/{packageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Online enrollments - user can read own, admin can read/write all
    match /online_enrollments/{enrollmentId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Online groups - read for enrolled users, write for admin
    match /online_groups/{groupId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Online sessions - read for participants, write for admin
    match /online_sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Settings collection
    match /settings/{settingId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
