rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Invoices - users can read their own
    match /invoices/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // Only cloud functions can write
    }

    // Payment confirmations - users can upload their own
    match /payment-confirmations/{transactionId} {
      allow read: if request.auth != null && (isAdmin() || request.auth != null);
      allow write: if request.auth != null;
    }

    // Videos - only admin can upload, users can read through signed URLs
    match /videos/{allPaths=**} {
      allow read: if false; // Use signed URLs only
      allow write: if isAdmin();
    }

    // Course files - authenticated users can read
    match /course-files/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Thumbnails - everyone can read
    match /thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
